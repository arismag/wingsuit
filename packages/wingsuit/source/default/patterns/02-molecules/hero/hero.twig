<div>
  {% embed "@organisms/container/container.twig" with {padding_bottom: 'default'}%}
    {% block content %}
      <section class="text-gray-700 body-font">
        <div class="flex md:flex-row flex-col items-center">
          <div class="flex flex-col  items-center text-center md:w-1/2 md:pr-16 md:items-start md:text-left mb-16 md:mb-0 lg:flex-grow lg:pr-24">
            <div class="uppercase tracking-loose w-full">{{ pre_headline }}</div>
